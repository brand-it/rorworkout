<%= errors(@customer) %>
<div class="input">
	<%= form.label :first_name %>
	<%= form.text_field :first_name, :class => 'text-input small-input', :required => true, :placeholder => "First Name" %>
	
</div>
<div class="input">
	<%= form.label :last_name %>
	<%= form.text_field :last_name, :placeholder => "Last Name", :required => true %>
</div>
<div class="input">
	<%= form.label :doctor_id, "Select Doctor" %>
	<%= form.select :doctor_id, doctors_for_select(current_user.doctors) %>
</div>

<div class="input">
	<%= form.label :user_id, "Select User" %>
	<%= form.select :user_id, User.for_select %>
</div>